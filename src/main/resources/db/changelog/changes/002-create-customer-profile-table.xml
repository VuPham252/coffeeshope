<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-customer-profile-table" author="developer">
        <createTable tableName="customer_profile">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="total_orders" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="loyalty_score" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="customer_profile"
                baseColumnNames="user_id"
                constraintName="fk_profile_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>


