<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-queue-entry-table" author="developer">
        <createTable tableName="queue_entry">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="queue_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="estimated_wait_time_minutes" type="INT"/>
            <column name="joined_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="left_at" type="TIMESTAMP"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="queue_entry"
                baseColumnNames="queue_id"
                constraintName="fk_queue_entry_queue"
                referencedTableName="queue"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="queue_entry"
                baseColumnNames="order_id"
                constraintName="fk_queue_entry_order"
                referencedTableName="order"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="queue_entry"
                baseColumnNames="user_id"
                constraintName="fk_queue_entry_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>

